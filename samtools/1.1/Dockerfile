FROM alpine:3.9 AS download
RUN apk add curl libarchive-tools
RUN curl -OL https://downloads.sourceforge.net/project/samtools/samtools/1.1/samtools-1.1.tar.bz2
RUN bsdtar xf samtools-1.1.tar.bz2

FROM alpine:3.9 AS buildenv
RUN apk add gcc make libc-dev ncurses-dev bzip2-dev zlib-dev curl-dev curl
COPY --from=download /samtools-1.1 /samtools-1.1
WORKDIR /samtools-1.1

RUN make -j4
RUN install -D -t /dest//usr/bin samtools


FROM alpine:3.9
RUN apk add bash ncurses libbz2 zlib libcurl
COPY --from=buildenv /dest /
ADD run.sh /run.sh
ENTRYPOINT [ "/bin/bash", "/run.sh" ]