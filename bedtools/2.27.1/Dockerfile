# THIS FILE IS AUTOMATICALLY GENERATED. DO NOT EDIT BY HAND
# template file is make
FROM alpine:3.9 AS download
RUN apk add curl libarchive-tools
RUN curl -OL https://github.com/arq5x/bedtools2/releases/download/v2.27.1/bedtools-2.27.1.tar.gz
RUN bsdtar xf bedtools-2.27.1.tar.gz

FROM alpine:3.9 AS buildenv
RUN apk add gcc g++ make libc-dev zlib-dev bash python2
COPY --from=download /bedtools2 /bedtools2
WORKDIR /bedtools2

RUN make -j4
RUN install -D -t /dest//usr/bin bin/*


FROM alpine:3.9
RUN apk add bash zlib libstdc++
COPY --from=buildenv /dest /
ADD run.sh /run.sh
ENTRYPOINT [ "/bin/bash", "/run.sh" ]